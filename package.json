{
  "name": "slippilab",
  "private": true,
  "type": "module",
  "scripts": {
    "bindings": "wrangler types",
    "build": "remix vite:build",
    "deploy": "wrangler pages deploy ./build/client",
    "dev": "remix vite:dev",
    "format": "bun x prettier --write .",
    "start": "wrangler pages dev ./build/client",
    "sql:gen": "drizzle-kit generate:sqlite",
    "sql:local": "wrangler d1 migrations apply slippilab --local",
    "sql:prod": "wrangler d1 migrations apply slippilab",
    "sql:staging": "wrangler d1 migrations apply slippilab-dev",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20240222.0",
    "@egoist/tailwindcss-icons": "^1.7.4",
    "@fontsource/atkinson-hyperlegible": "^5.0.19",
    "@iconify/json": "^2.2.189",
    "@react-three/drei": "^9.99.6",
    "@react-three/fiber": "^8.15.16",
    "@remix-run/cloudflare": "^2.8.0",
    "@remix-run/cloudflare-pages": "^2.8.0",
    "@remix-run/dev": "^2.8.0",
    "@remix-run/react": "^2.8.0",
    "@shelacek/ubjson": "^1.1.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/react": "^18.2.62",
    "@types/react-dom": "^18.2.19",
    "@types/three": "^0.162.0",
    "autoprefixer": "^10.4.18",
    "drizzle-kit": "^0.20.14",
    "drizzle-orm": "^0.29.4",
    "isbot": "^5.1.1",
    "miniflare": "^3.20240223.0",
    "node-fetch": "^3.3.2",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "random-word-slugs": "^0.1.7",
    "react": "^18.2.0",
    "react-aria-components": "^1.1.1",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.4.1",
    "tailwindcss-react-aria-components": "^1.1.1",
    "three": "^0.162.0",
    "three-stdlib": "^2.29.5",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-tsconfig-paths": "^4.3.1",
    "wrangler": "^3.30.1",
    "zustand": "^4.5.2"
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss"
    ],
    "importOrder": [
      "^~/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  }
}